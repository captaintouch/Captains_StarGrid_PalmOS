{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "makeDebugBuild",
            "command": "make debug",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "makeAllBuilds",
            "command": "make",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CP COLOR RELEASE",
            "dependsOn": [
                "makeAllBuilds"
            ],
            "command": "cloudpilot-emu -l 6667 emu/m505.image -s emu/cloudpilotStartRelease.cp",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CP COLOR DEBUG",
            "dependsOn": [
                "makeDebugBuild"
            ],
            "command": "cloudpilot-emu -l 6667 emu/m505.image -s emu/cloudpilotStartDebug.cp",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CP-UARM HIRES Release",
            "dependsOn": [
                "makeAllBuilds"
            ],
            "command": "emu/createsd.sh artifacts/StarGrid_hires.prc && cp-uarm emu/uarm.session -s emu/sdcard.image",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CP BW RELEASE",
            "dependsOn": [
                "makeAllBuilds"
            ],
            "command": "cloudpilot-emu -l 6667 emu/m100.image -s emu/cloudpilotStartRelease.cp",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CP BW DEBUG",
            "dependsOn": [
                "makeDebugBuild"
            ],
            "command": "cloudpilot-emu -l 6667 emu/m100.image -s emu/cloudpilotStartDebug.cp",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Install DEBUG to Palm",
            "dependsOn": [
                "makeDebugBuild"
            ],
            "command": "pilot-xfer -pusb: -i artifacts/StarGrid_debug.prc",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Install RELEASE to Palm",
            "dependsOn": [
                "makeAllBuilds"
            ],
            "command": "pilot-xfer -pusb: -i artifacts/StarGrid_lowres.prc",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
    ]
}